{% extends 'base.html.twig' %}

{% block title %}Toutes les séries{% endblock %}

{% block body %}
    <div class="container">
        <h1>Listes des séries</h1>

        {{ form_start(form) }}
        <div class="row d-flex justify-content-center">
            <div class="col-md-4">
                {{ form_row(form.searchField) }}
            </div>
            <div class="btn-group d-inline-block" role="group">
                <button class="btn btn-sm btn-outline-light" type="submit" name="btnSearch">Rechercher</button>
                {% if search == true %}
                    <a href="{{ path('wild_index') }}" class="btn btn-sm btn-outline-light">Afficher tout</a>
                {% endif %}
            </div>
        </div>
        {{ form_end(form) }}

        <div class="row my-2">
            {% for program in programs %}
                <div class="col-6 col-md-4 col-lg-3 mb-4">
                    <a href="{{ path('wild_show', { 'slug': program.slug | lower }) }}">
                        <div class="card card-poster h-100">
                            <div class="image">
                                <img src="{{ program.poster }}" class="card-img-top" alt="{{ program.title }}">
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                Aucune série trouvée.
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(programs) }}
        </div>
    </div>
{% endblock %}
