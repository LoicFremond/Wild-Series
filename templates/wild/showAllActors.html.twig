{% extends 'base.html.twig' %}
{% block title 'Tous les acteurs' %}

{% block body %}
    <div class="container">
        <h1>Les acteurs</h1>
                {{ form_start(formA) }}
        <div class="row d-flex justify-content-center">
            <div class="col-md-4">
                {{ form_row(formA.searchField) }}
            </div>
            <div class="btn-group d-inline-block" role="group">
                <button class="btn btn-sm btn-outline-light" type="submit" name="btnSearch">Rechercher</button>
                {% if search == true %}
                    <a href="{{ path('wild_all_actors') }}" class="btn btn-sm btn-outline-light">Afficher tout</a>
                {% endif %}
            </div>
        </div>
        {{ form_end(formA) }}
        
        <div class="row my-5">
            {% for actor in actors %}
                <div class="col-8 col-md-4 col-lg-2 mb-4 actor-card">
                    <a href="{{ path('wild_actor',
                        {'slug': actor.slug | lower,
                        }) }}">
                        <div class="card card-actor w-100 h-100">
                            <img src="{{ actor.image ?? asset('build/images/actor.6ddea756.png') }}"
                                 class="actor.img {{ actor.image ? "" : "card-img-actor-default" }} h-80"
                                 alt="{{ actor.name }}" >
                            <div class="card-body">
                                <p class="card-text text-center">
                                    <small class="text">{{ actor.name }}</small>
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                Aucun acteur trouv√©.
            {% endfor %}
        </div>
        <div class="navigation">
            {{ knp_pagination_render(actors) }}
        </div>
    </div>
{% endblock %}
