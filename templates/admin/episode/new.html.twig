        <h1>Créer un nouvel épisode</h1>
        <a class="btn btn-sm btn-outline-light my-4" href="{{ path('episode_index') }}">Retour à la liste</a>

        <div class="row">
            <div class="col-md-4 image-container mb-3">
                <img id="img" src="" alt="image non disponible">
            </div>
            <div class="col-md-8">
                {{ form_row(form.slug, { 'attr': {'class': 'hide'} }) }}
                {{ include('admin/episode/_form.html.twig') }}
            </div>
        </div>

    </div>
{% endblock %}
