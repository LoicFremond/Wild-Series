{% extends 'base.html.twig' %}

{% block title %}Catégories | Admin{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Liste des catégories</h1>

        <a class="btn btn-sm btn-outline-light my-4" href="{{ path('admin') }}">{{ 'Back'|trans }}</a>
        <a class="btn btn-sm btn-outline-light my-4" href="{{ path('category_new') }}">Nouvelle catégorie</a>

        <table class="table table-dark table-hover">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Afficher</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.name }}</td>
                    <td>
                        <a class="btn btn-sm btn-outline-light" href="{{ path('category_show', {'id': category.id}) }}">Afficher</a>
                    </td>
                    <td>
                        <a class="btn btn-sm btn-outline-light" href="{{ path('category_edit', {'id': category.id}) }}">Editer</a>
                    </td>
                    <td>
                            {{ include('admin/category/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}
