{% extends 'base.html.twig' %}

{% block title %}{{ 'Users'|trans }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 text-center">Liste des utilisateurs</h1>
		<a class="btn btn-sm btn-outline-light my-4" href="{{ path('admin') }}">{{ 'Back'|trans }}</a>
		<a class="btn btn-sm btn-outline-light" href="{{ path('user_new') }}">Nouvel utilisateur</a>

		<table class="table table-dark table-hover">
			<thead>
				<tr>
					<th>Email</th>
					<th>Pseudonyme</th>
					<th>Afficher</th>
					<th>Modifier</th>
					<th>Supprimer</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.email }}</td>
						<td>{{ user.username }}</td>
						<td>
							<a class="btn btn-sm btn-outline-light my-3" href="{{ path('user_show', {'id': user.id}) }}">Afficher</a>
						</td>
						<td>
							<a class="btn btn-sm btn-outline-light my-3" href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
						</td>
						<td>{{ include('admin/user/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Pas de comptes trouv√©</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
