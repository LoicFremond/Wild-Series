{% extends 'base.html.twig' %}

{% block title %}Série | Admin{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Visualiser</h1>
        <a class="btn btn-sm btn-outline-light my-4" href="{{ path('program_index') }}">{{ 'Back'|trans }}</a>
                <div class="row">

            <div class="col-md-4 image-container mb-3 actor-card">
                    <img src="{{ program.poster }}" alt="{{ program.title }}" class="image-shadowA">
                </div>
                            <div class="col-md-8">

        <table class="table table-dark">
            <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ program.title }}</td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ program.category.name }}</td>
            </tr>
            <tr>
                <th>Acteur</th>
                <td>
                    {% for actor in program.actors %}
                       <p class="actor-wrapper">
                           <span class="btn-custom">{{ actor.name }}</span>
                       </p>
                    {% else %}
                        Aucun acteur trouvé
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Résumé</th>
                <td>{{ program.summary }}</td>
            </tr>
            </tbody>
        </table>
        <a class="btn btn-sm btn-outline-light my-3s" href="{{ path('program_edit', {'slug': program.slug | lower}) }}">Editer</a>

        {{ include('admin/program/_delete_form.html.twig') }}
    
</div>
</div></div>
{% endblock %}
