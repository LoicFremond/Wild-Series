{% extends 'base.html.twig' %}

{% block title %}Listes Saisons | Admin{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Listes des Saisons</h1>
        <a class="btn btn-sm btn-outline-light my-4" href="{{ path('admin') }}">{{ 'Back'|trans }}</a>
        <a class="btn btn-sm btn-outline-light" href="{{ path('season_new') }}">Nouvelle saison</a>

        <table class="table table-dark table-hover">
            <thead>
            <tr>
                <th>Nom de la s√©rie</th>
                <th>Saison</th>
                <th>Episodes</th>
                <th>Sortie</th>
                <th>Afficher</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
            </thead>
            <tbody>
            {% for season in seasons %}
                <tr>
                    <td>{{ season.program.title }}</td>
                    <td>Saison {{ season.number }}</td>
                    <td>{{ season.episodes | length }}</td>
                    <td>{{ season.year }}</td>
                    <td>
                        <a class="btn btn-sm btn-outline-light my-3" href="{{ path('season_show', {'id': season.id}) }}">Afficher</a>
                        </td>
                        <td>
                        <a class="btn btn-sm btn-outline-light my-3" href="{{ path('season_edit', {'id': season.id}) }}">Editer</a>
                        </td>

                        <td>
                    {{ include('admin/season/_delete_form.html.twig') }}
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
