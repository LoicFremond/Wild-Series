{% extends 'base.html.twig' %}

{% block title %}{{ 'Login'|trans }}
{% endblock %}

{% block body %}
	<div class="container">
		<form method="post">
			<h1 class="my-5 text-center">{{ 'Login'|trans }}</h1>
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3">
					{{ 'You are login at'|trans }}
					{{ app.user.username }},
					<a href="{{ path('app_logout') }}">{{ 'Logout'|trans }}</a>
				</div>
			{% endif %}

			<label for="inputEmail">Email</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" required>
			<label for="inputPassword">{{ 'Password'|trans }}</label>
			<input type="password" name="password" id="inputPassword" class="form-control mb-4" required>

			<input
			type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			{#
			                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
			                See https://symfony.com/doc/current/security/remember_me.html
			            #}
			{# <div class="checkbox mb-3">

				<input type="checkbox" id="remember_me" name="_remember_me" checked/>
				<label for="remember_me">
					Se souvenir de moi</label>

			</div> #}


			<button class="btn btn-sm btn-outline-light my-3s" type="submit">
				{{ 'Login'|trans }}
			</button>
		</form>
	</div>
{% endblock %}
