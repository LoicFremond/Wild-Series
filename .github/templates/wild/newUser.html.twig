{% extends 'base.html.twig' %}

{% block title %}{{ 'New'|trans }} {{ 'User'|trans }}
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="my-5 text-center">{{ 'Register'|trans }}</h1>
		<a class="btn btn-sm btn-outline-light my-5" href="{{ path('user_index') }}">{{ 'Back'|trans }}</a>
		<div class="row">
			<div class="col-md-4">
				<div class="col-md-12 image-container mb-3">
					<img id="img" src="" alt="Image non disponible">
				</div>
			</div>
			<div class="col-md-8">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6 mt-3">{{ form_row(form.username) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.email) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6 mt-3">{{ form_row(form.avatar) }}</div>
					<div class="col-md-6 mt-3">{{ form_row(form.Password) }}</div>
				</div>
				<h5 class="text-center mt-5">
					Ne pas remplir
				</h5>
				<div class="row">
					<div class="col-md-6">{{ form_row(form.createdAt) }}</div>
				</div>
				{{ include('admin/user/_form.html.twig') }}
				{{ form_end(form) }}
			</div>

		</div>
	{% endblock %}
