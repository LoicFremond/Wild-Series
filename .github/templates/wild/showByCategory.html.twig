{% extends 'base.html.twig' %}

{% block title %}{{ 'Category'|trans }} {{ category.name |trans }}{% endblock %}

{% block body %}
    <div class="container">

        <h1 class="my-5 text-center">{{ 'Category'|trans }} {{ category.name |trans }}</h1>
        <div class="row my-5">
            {% for program in selectByCategory %}
                <div class="col-6 col-md-4 col-lg-3 mb-4">
                    <a href="{{ path('wild_show', { 'slug': program.slug | lower }) }}">
                        <div class="card card-poster h-100">
                            <img src="{{ program.poster }}" class="card-img-top" alt="{{ program.title }}">
                        </div>
                    </a>
                </div>
            {% else %}
                <div id="wrapper">
                    <h1 class="glitch" data-text="Not found">Not found</h1>
                    <span class="sub">{{'No TV Shows found'|trans }}</span>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
