{% extends 'base.html.twig' %}

{% block title %}{{ 'My Profile'|trans }}
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="my-5 text-center">{{ 'My Profile'|trans }}</h1>
		<div class="row">
			<div class="col-md-4">
				<div class="col-md-12 image-container mb-3">
					<img id="img" src="" alt="Image non disponible">
				</div>
			</div>
			<div class="col-md-8">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-md-6">{{ form_row(form.username) }}</div>
					<div class="col-md-6">{{ form_row(form.email) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6">{{ form_row(form.avatar) }}</div>
					<div class="col-md-6">{{ form_row(form.createdAt) }}</div>
				</div>
				<div class="row">
					<div class="col-md-6">{{ form_row(form.Password) }}</div>
				</div>

				{{ include('/user/_form.html.twig', {'button_label': 'Update'}) }}

				{{ include('/user/_delete_form.html.twig') }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
